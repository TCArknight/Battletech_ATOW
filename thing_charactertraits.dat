  <!-- Defender Ability 
  <thing
    id="abDefender"
    name="Stalwart Defender"
    compset="Ability"
    isunique="yes"
    description="Add +2 to Defense rating with a corresponding -2 penalty on all attacks."
    summary="Add +2 to Defense with a -2 on attacks.">-->
    <!-- We don't want this ability appearing for normal selection, so assign it the "Hide" tag 
    <tag group="Hide" tag="Ability"/>-->
    <!-- This ability can be activated by the user to apply its effects 
    <tag group="User" tag="Activation"/>-->
    <!-- This script applies the activation effects 
    <eval index="1" phase="PreTraits" priority="5000">
      <before name="Calc trtFinal"/><![CDATA[
      ~if we haven't been activated, just get out
      doneif (field[abilActive].value = 0)

      ~apply the effects of the activated ability
      #traitbonus[trDefense] += 2
      #traitbonus[skMelee] -= 2
      #traitbonus[skShooting] -= 2
      ]]></eval>
    </thing>-->

